<%= form_for(@listing) do |f| %>
  <% if @listing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@listing.errors.count, "error") %> prohibited this listing from being saved:</h2>

      <ul>
      <% @listing.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="col-md-10 col-md-offset-1">
    <div class="row">
      <div class="form-group col-md-4">
        <%= f.label :name, "Listing Name", class: "form-label" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-md-4">
        <%= f.label :image, "Upload Image", class: "form-label" %>
        <%= f.file_field :image, class: "form-control" %>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-md-4">
        <%= f.label :start_bid, class: "form-label" %>
        <%= f.text_field :start_bid, class: "form-control" %>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-md-4">
        <%= f.label :description, class: "form-label" %>
        <%= f.text_area :description, class: "form-control" %>
      </div>
    </div>  
    
    <div class="row">
      <div class="actions col-md-4">
        <%= f.submit "Submit", class: "btn btn-primary btn-sm" %>
      </div>
    </div>
  </div>
<% end %>
